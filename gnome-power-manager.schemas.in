<gconfschemafile>
  <schemalist>

    <schema>
      <key>/schemas/apps/gnome-power-manager/general/require_password</key>
      <applyto>/apps/gnome-power-manager/general/require_password</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>If we require a password when resuming from suspend</short>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/general/display_icon_policy</key>
      <applyto>/apps/gnome-power-manager/general/display_icon_policy</applyto>
      <owner>gnome-power-manager</owner>
      <type>string</type>
      <default>always</default>
      <locale name="C">
        <short>When to show the notification icon</short>
        <long>Options are never, critical, charge, always</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/general/threshold_low</key>
      <applyto>/apps/gnome-power-manager/general/threshold_low</applyto>
      <owner>gnome-power-manager</owner>
      <type>int</type>
      <default>20</default>
      <locale name="C">
        <short>The powerdevice warning threshold.</short>
        <long>The percentage that the powerdevice has to get to be considered "low enough" to warn the user.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/general/threshold_critical</key>
      <applyto>/apps/gnome-power-manager/general/threshold_critical</applyto>
      <owner>gnome-power-manager</owner>
      <type>int</type>
      <default>5</default>
      <locale name="C">
        <short>The powerdevice action threshold.</short>
        <long>The percentage that the powerdevice has to get to be considered "low enough" to perform an action.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/ac/brightness</key>
      <applyto>/apps/gnome-power-manager/policy/ac/brightness</applyto>
      <type>int</type>
      <default>90</default>
      <locale name="C">
        <short>The brightness the display is set to on AC</short>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/ac/sleep_computer</key>
      <applyto>/apps/gnome-power-manager/policy/ac/sleep_computer</applyto>
      <type>int</type>
      <default>0</default>
      <locale name="C">
        <short>The idle time in seconds before the computer tries to sleep</short>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/ac/sleep_display</key>
      <applyto>/apps/gnome-power-manager/policy/ac/sleep_display</applyto>
      <type>int</type>
      <default>60</default>
      <locale name="C">
        <short>The idle time in seconds before the display tries to sleep</short>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/ac/sleep_hdd</key>
      <applyto>/apps/gnome-power-manager/policy/ac/sleep_hdd</applyto>
      <type>int</type>
      <default>0</default>
      <locale name="C">
        <short>The idle time in seconds before the hard disk drives try to sleep</short>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/battery/brightness</key>
      <applyto>/apps/gnome-power-manager/policy/battery/brightness</applyto>
      <type>int</type>
      <default>50</default>
      <locale name="C">
        <short>The brightness the display is set to on battery</short>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/battery/sleep_computer</key>
      <applyto>/apps/gnome-power-manager/policy/battery/sleep_computer</applyto>
      <type>int</type>
      <default>50</default>
      <locale name="C">
        <short>The idle time in seconds before the computer tries to sleep</short>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/battery/sleep_display</key>
      <applyto>/apps/gnome-power-manager/policy/battery/sleep_display</applyto>
      <type>int</type>
      <default>10</default>
      <locale name="C">
        <short>The idle time in seconds before the display tries to sleep</short>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/battery/sleep_hdd</key>
      <applyto>/apps/gnome-power-manager/policy/battery/sleep_hdd</applyto>
      <type>int</type>
      <default>5</default>
      <locale name="C">
        <short>The idle time in seconds before the hard disk drives try to sleep</short>
      </locale>
   </schema>
   
    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/button_suspend</key>
      <applyto>/apps/gnome-power-manager/policy/button_suspend</applyto>
      <type>string</type>
      <default>suspend</default>
      <locale name="C">
        <short>The event for a system suspend button press</short>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/button_lid</key>
      <applyto>/apps/gnome-power-manager/policy/button_lid</applyto>
      <type>string</type>
      <default>suspend</default>
      <locale name="C">
         <short>The event for a laptop lid closing</short>
     </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/sleep_type</key>
      <applyto>/apps/gnome-power-manager/policy/sleep_type</applyto>
      <type>string</type>
      <default>suspend</default>
      <locale name="C">
        <short>The type of sleep (hibernate/suspend) to use automatically.</short>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/battery_critical</key>
      <applyto>/apps/gnome-power-manager/policy/battery_critical</applyto>
      <type>string</type>
      <default>shutdown</default>
      <locale name="C">
        <short>The action to take when the battery is critically low.</short>
      </locale>
   </schema>

  </schemalist>
</gconfschemafile>
