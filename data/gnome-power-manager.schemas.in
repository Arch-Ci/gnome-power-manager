<gconfschemafile>
  <schemalist>

    <schema>
      <key>/schemas/apps/gnome-power-manager/notify/ac_adapter</key>
      <applyto>/apps/gnome-power-manager/notify/ac_adapter</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Notify on AC loss</short>
        <long>If we should notify the user that the AC adapter has been removed</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/notify/fully_charged</key>
      <applyto>/apps/gnome-power-manager/notify/fully_charged</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Notify on fully charged</short>
        <long>If we should notify the user that the battery is fully charged</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/general/display_icon_policy</key>
      <applyto>/apps/gnome-power-manager/general/display_icon_policy</applyto>
      <owner>gnome-power-manager</owner>
      <type>string</type>
      <default>always</default>
      <locale name="C">
        <short>When to show the notification icon</short>
        <long>The display icon policy can be never, critical, charge, always</long>
      </locale>
    </schema>
j
    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/ac/brightness</key>
      <applyto>/apps/gnome-power-manager/policy/ac/brightness</applyto>
      <type>int</type>
      <default>7</default>
      <locale name="C">
        <short>AC LCD brightness hardware value</short>
        <long>The hardware brightness the display is set to whilst on AC power</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/ac/sleep_computer</key>
      <applyto>/apps/gnome-power-manager/policy/ac/sleep_computer</applyto>
      <type>int</type>
      <default>0</default>
      <locale name="C">
        <short>Computer AC idle timeout value</short>
        <long>The idle time in seconds before the computer tries to sleep whilst on AC power</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/ac/sleep_display</key>
      <applyto>/apps/gnome-power-manager/policy/ac/sleep_display</applyto>
      <type>int</type>
      <default>1800</default>
      <locale name="C">
        <short>Display AC idle timeout value</short>
        <long>The idle time in seconds before the display tries to sleep whilst on AC power</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/battery/brightness</key>
      <applyto>/apps/gnome-power-manager/policy/battery/brightness</applyto>
      <type>int</type>
      <default>3</default>
      <locale name="C">
        <short>Battery LCD brightness hardware value</short>
        <long>The hardware brightness the display is set to whilst on battery power</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/battery/sleep_computer</key>
      <applyto>/apps/gnome-power-manager/policy/battery/sleep_computer</applyto>
      <type>int</type>
      <default>1200</default>
      <locale name="C">
        <short>Computer battery idle timeout value</short>
        <long>The idle time in seconds before the computer tries to sleep whilst on battery power</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/battery/sleep_display</key>
      <applyto>/apps/gnome-power-manager/policy/battery/sleep_display</applyto>
      <type>int</type>
      <default>300</default>
      <locale name="C">
        <short>Display battery idle timeout value</short>
        <long>The idle time in seconds before the display tries to sleep whilst on battery power</long>
      </locale>
   </schema>
   
    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/button_suspend</key>
      <applyto>/apps/gnome-power-manager/policy/button_suspend</applyto>
      <type>string</type>
      <default>suspend</default>
      <locale name="C">
        <short>Suspend button action</short>
        <long>The action to take when the system suspend button is pressed</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/button_lid</key>
      <applyto>/apps/gnome-power-manager/policy/button_lid</applyto>
      <type>string</type>
      <default>suspend</default>
      <locale name="C">
        <short>Laptop lid close action</short>
        <long>The action to take when the laptop lid is closed</long>
     </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/sleep_type</key>
      <applyto>/apps/gnome-power-manager/policy/sleep_type</applyto>
      <type>string</type>
      <default>suspend</default>
      <locale name="C">
        <short>Default sleep type</short>
        <long>The type of sleep (hibernate/suspend) to use automatically.</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/policy/battery_critical</key>
      <applyto>/apps/gnome-power-manager/policy/battery_critical</applyto>
      <type>string</type>
      <default>shutdown</default>
      <locale name="C">
        <short>Battery critical low action</short>
        <long>The action to take when the battery is critically low.</long>
      </locale>
   </schema>

  </schemalist>
</gconfschemafile>
