<gconfschemafile>
  <schemalist>

    <schema>
      <key>/schemas/apps/gnome-power-manager/dim_on_idle</key>
      <applyto>/apps/gnome-power-manager/dim_on_idle</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>If to dim the screen after a period of inactivity</short>
        <long>If we should dim the screen to save power when the computer is marked as idle.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/can_suspend</key>
      <applyto>/apps/gnome-power-manager/can_suspend</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>If the user can suspend</short>
        <long>If this particular user should have suspend on the drop-down menu and in the prefs</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/can_hibernate</key>
      <applyto>/apps/gnome-power-manager/can_hibernate</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>If the user can hibernate</short>
        <long>If this particular user should have hibernate on the drop-down menu and in the prefs</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/notify_ac_adapter</key>
      <applyto>/apps/gnome-power-manager/notify_ac_adapter</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Notify on AC loss</short>
        <long>If we should notify the user that the AC adapter has been removed</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/notify_fully_charged</key>
      <applyto>/apps/gnome-power-manager/notify_fully_charged</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Notify on fully charged</short>
        <long>If we should notify the user that the battery is fully charged</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/display_icon_policy</key>
      <applyto>/apps/gnome-power-manager/display_icon_policy</applyto>
      <owner>gnome-power-manager</owner>
      <type>string</type>
      <default>always</default>
      <locale name="C">
        <short>When to show the notification icon</short>
        <long>The display icon policy can be never, critical, charge, always</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/ac_brightness</key>
      <applyto>/apps/gnome-power-manager/ac_brightness</applyto>
      <type>int</type>
      <default>100</default>
      <locale name="C">
        <short>AC LCD brightness hardware value</short>
        <long>The hardware brightness the display is set to whilst on AC power</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/ac_sleep_computer</key>
      <applyto>/apps/gnome-power-manager/ac_sleep_computer</applyto>
      <type>int</type>
      <default>0</default>
      <locale name="C">
        <short>Computer AC idle timeout value</short>
        <long>The idle time in seconds before the computer tries to sleep whilst on AC power</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/ac_sleep_display</key>
      <applyto>/apps/gnome-power-manager/ac_sleep_display</applyto>
      <type>int</type>
      <default>1800</default>
      <locale name="C">
        <short>Display AC idle timeout value</short>
        <long>The idle time in seconds before the display tries to sleep whilst on AC power</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/battery_brightness</key>
      <applyto>/apps/gnome-power-manager/battery_brightness</applyto>
      <type>int</type>
      <default>50</default>
      <locale name="C">
        <short>Battery LCD brightness hardware value</short>
        <long>The hardware brightness the display is set to whilst on battery power</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/battery_sleep_computer</key>
      <applyto>/apps/gnome-power-manager/battery_sleep_computer</applyto>
      <type>int</type>
      <default>1200</default>
      <locale name="C">
        <short>Computer battery idle timeout value</short>
        <long>The idle time in seconds before the computer tries to sleep whilst on battery power</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/battery_sleep_display</key>
      <applyto>/apps/gnome-power-manager/battery_sleep_display</applyto>
      <type>int</type>
      <default>300</default>
      <locale name="C">
        <short>Display battery idle timeout value</short>
        <long>The idle time in seconds before the display tries to sleep whilst on battery power</long>
      </locale>
   </schema>
   
    <schema>
      <key>/schemas/apps/gnome-power-manager/action_button_suspend</key>
      <applyto>/apps/gnome-power-manager/action_button_suspend</applyto>
      <type>string</type>
      <default>suspend</default>
      <locale name="C">
        <short>Suspend button action</short>
        <long>The action to take when the system suspend button is pressed</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/action_ac_button_lid</key>
      <applyto>/apps/gnome-power-manager/action_ac_button_lid</applyto>
      <type>string</type>
      <default>blank</default>
      <locale name="C">
        <short>Laptop lid close action on AC</short>
        <long>The action to take when the laptop lid is closed and not on battery power</long>
     </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/action_battery_button_lid</key>
      <applyto>/apps/gnome-power-manager/action_battery_button_lid</applyto>
      <type>string</type>
      <default>suspend</default>
      <locale name="C">
        <short>Laptop lid close action on battery</short>
        <long>The action to take when the laptop lid is closed and on battery power</long>
     </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/action_sleep_type</key>
      <applyto>/apps/gnome-power-manager/action_sleep_type</applyto>
      <type>string</type>
      <default>suspend</default>
      <locale name="C">
        <short>Default sleep type</short>
        <long>The type of sleep (hibernate/suspend) to use automatically.</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/action_battery_critical</key>
      <applyto>/apps/gnome-power-manager/action_battery_critical</applyto>
      <type>string</type>
      <default>shutdown</default>
      <locale name="C">
        <short>Battery critical low action</short>
        <long>The action to take when the battery is critically low.</long>
      </locale>
   </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/lock_use_screensaver_settings</key>
      <applyto>/apps/gnome-power-manager/lock_use_screensaver_settings</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Use gnome-screensaver lock setting</short>
        <long>If we should use the gnome-screensaver setting for lock, or our own custom rules</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/lock_ac_lid</key>
      <applyto>/apps/gnome-power-manager/lock_ac_lid</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Lock screen for lid on AC power</short>
        <long>If we should lock the screen when the lid is closed on AC power (using custom rules)</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/lock_battery_lid</key>
      <applyto>/apps/gnome-power-manager/lock_battery_lid</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Lock screen for lid on battery power</short>
        <long>If we should lock the screen when the lid is closed on battery power (using custom rules)</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/lock_button_suspend</key>
      <applyto>/apps/gnome-power-manager/lock_button_suspend</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Lock screen for suspend button</short>
        <long>If we should lock the screen when the suspend button is pressed (using custom rules)</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gnome-power-manager/lock_sleep_idle</key>
      <applyto>/apps/gnome-power-manager/lock_sleep_idle</applyto>
      <owner>gnome-power-manager</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Lock screen for idle sleep</short>
        <long>If we should lock the screen when the idle sleep is executed (using custom rules)</long>
      </locale>
    </schema>

  </schemalist>
</gconfschemafile>
