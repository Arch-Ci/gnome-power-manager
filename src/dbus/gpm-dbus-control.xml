<?xml version="1.0" encoding="UTF-8"?>
<node name="/">
  <interface name="org.gnome.PowerManager">
    <!-- Policy -->
    <method name="AllowedSuspend">
      <arg type="b" name="can_suspend" direction="out"/>
    </method>
    <method name="AllowedHibernate">
      <arg type="b" name="can_hibernate" direction="out"/>
    </method>
    <method name="AllowedReboot">
      <arg type="b" name="can_restart" direction="out"/>
    </method>
    <method name="AllowedShutdown">
      <arg type="b" name="can_shutdown" direction="out"/>
    </method>
    <!-- Methods -->
    <method name="Suspend"></method>
    <method name="Hibernate"></method>
    <method name="Reboot"></method>
    <method name="Shutdown"></method>
    <!-- Registrations interface -->
    <method name="Register">
      <annotation name="org.freedesktop.DBus.GLib.Async" value=""/>
      <arg type="s" name="application" direction="in"/>
      <arg type="u" name="cookie" direction="out"/>
    </method>
    <method name="UnRegister">
      <arg type="u" name="cookie" direction="in"/>
    </method>
    <method name="Policy">
      <arg type="u" name="cookie" direction="in"/>
      <arg type="b" name="allowed" direction="in"/>
    </method>
    <signal name="Request"/><!--use s:type-->
  </interface>
</node>
